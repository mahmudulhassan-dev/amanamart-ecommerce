# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=amanamart
DB_USERNAME=postgres
DB_PASSWORD=root

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Security
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-use-openssl-rand-hex-32
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Email Configuration (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@amanamart.com

# Application
APP_NAME=AmanaMart
APP_URL=http://localhost:8080
APP_VERSION=1.0.1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/amanamart.log
